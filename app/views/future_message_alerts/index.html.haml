.card
  .card-header.d-flex.align-items-center
    %span Young People Alerts

  %table.table
    %thead
      %tr
        %th Young Person Name
        %th future_message 
        %th Actions
    %tbody
      - @future_message_alerts.each do |alert|
        %tr
          %td= alert.future_message_id.content
          %td= alert.future_message_id
          %td
            = link_to 'Show', future_message_alert_path(alert), class: 'btn btn-info'
            = link_to 'Edit', edit_future_message_alert_path(alert), class: 'btn btn-warning'
            = link_to 'Delete', future_message_alert_path(alert), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
